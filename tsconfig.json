{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "composite": true, // Enforces certain constraints which make it possible for build tools to quickly determine if a project has been built yet.
    "allowJs": true, // Allow JavaScript files to be imported inside your project
    "allowUnreachableCode": false, // Forbid unreachable code in the codebase
    "noFallthroughCasesInSwitch": true, // Additional guards when using enums in switch
    "allowSyntheticDefaultImports": true, // Enable import Something from 'module' instead of import * as Something from 'module' when no default export exists
    "noImplicitReturns": true, // Guards against functions not returning from only some code paths - very subtle, usually warns against bad code
    "noUnusedLocals": true, // Reports errors on unused local variables.
    "noUnusedParameters": true, // Reports errors on unused parameters.
    "skipLibCheck": true, // Skip checking of external libraries
    "strict": true, // Enables all strict type checking options.
    "resolveJsonModule": true, // Enable json import to ESM (possible that importing json might lead to longer loading time)
    "moduleResolution": "bundler", // Specifies the resolution strategy for modules.
    "allowImportingTsExtensions": true, // Allows importing TypeScript files directly.
    "isolatedModules": true, // Treats each file as a separate module.
    "noEmit": true, // Disable emitting output files.
    "jsx": "react-jsx" // Specifies the JSX factory function for React.
  },
  "include": ["src", "lib", "vite.config.ts", "package.json"],
  "exclude": ["node_modules"],
}
